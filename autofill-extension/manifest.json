{
  "manifest_version": 3,
  "name": "Flight Booker Autofill",
  "description": "Autofills passenger and contact info on booking pages.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Autofill",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.ryanair.com/*"],
      "js": ["common.js", "ryanair.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.wizzair.com/*"],
      "js": ["common.js", "wizzair.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.hotelston.com/*"],
      "js": ["common.js", "hotelston.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.ryanair.com/*", "*://*.wizzair.com/*", "*://*.hotelston.com/*"],
      "js": ["common.js", "generic.js"],
      "run_at": "document_idle"
    }
  ]
}
